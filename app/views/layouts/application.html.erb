<!DOCTYPE html>
<html>

<head>
  <title>Gamershop | <%= @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="container">

  <header>
    <%= render 'layouts/header' %>
  </header>

  <div class="row">
    <% flash.each do |name, msg| %>
      <div class="span5">
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <%= msg %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render 'layouts/header_modals' %>

  <%= yield %>

</div>
</body>

</html>
