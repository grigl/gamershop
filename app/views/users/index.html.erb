<%= button_to 'new user', new_user_path, method: :get, class: 'btn btn-success' %>

<table class="table table-stripped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>email</th>
      <th>username</th>
      <th>active</th>
      <th>created_at</th>
      <th>updated_at</th>
    </tr>
  </thead>
  <tbody>

  <% @users.each do |user| %>
    <tr>
      <th><%= user.id %></th>
      <th><%= user.email %></th>
      <th><%= user.username %></th>
      <th><%= user.active %></th>
      <th><%= user.created_at %></th>
      <th><%= user.updated_at %></th>
      <th><%= link_to 'edit', edit_user_path(user) %></th>
      <th><%= link_to 'delete', user, method: :delete, confirm: 'Are you sure?' %></th>
    </tr>
  <% end %>

  </tbody>
</table>
