<h1>Products</h1>
      
<div class="table well table-bordered">
  <div>
    <%= link_to 'new product', new_product_path, class: 'btn' %>
  </div></br>
  <div>
    <%= will_paginate @products, container: false %>
  </div>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>title</th>
        <th>price</th>
        <th>platform</th>
        <th>released date</th>
        <th>genre</th>
        <th>description</th>
        <th>developer</th>
        <th>publisher</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>

    <% @products.each do |product| %>
      <tr>
        <th><%= product.id %></th>
        <th><%= product.title %></th>
        <th><%= product.price %></th>
        <th><%= product.platform %></th>
        <th><%= product.released_date %></th>
        <th><%= product.genre %></th>
        <th><%= truncate(product.description, length: 40) %></th>
        <th><%= product.developer %></th>
        <th><%= product.publisher %></th>
        <th><%= link_to 'edit', edit_product_path(product) %></th>
        <th><%= link_to 'delete', product, method: :delete, confirm: 'Are you sure?' %></th>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>